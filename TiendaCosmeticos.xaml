<Page
    x:Class="TotalRisk.TiendaCosmeticos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TotalRisk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="ImageGridView_DefaultItemTemplate"
                      x:DataType="local:VMDron">
            <Grid Height="40" Width="300" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Id}" FontSize="{Binding Value, ElementName=FontSlider}" VerticalAlignment="Center"/>
                <Image Source="{x:Bind Imagen}" Grid.Column="1" VerticalAlignment="Center" Width="{Binding Value, ElementName=ImageSlider}"/>
                <TextBlock Text="{x:Bind Nombre}" FontSize="{Binding Value, ElementName=FontSlider}" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>

        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--<NavigationView x:Name="MainNavigation"
                        PaneDisplayMode="Top"
                        IsSettingsVisible="False" muxc:Grid.ColumnSpan="2">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Partida" x:Name="GameTab"/>
                <NavigationViewItem Content="Tienda" x:Name="Store"/>
                <NavigationViewItem Content="Pase de batalla" x:Name="BattlePass"/>
                <NavigationViewItem Content="Opciones" x:Name="Options"/>
            </NavigationView.MenuItems>
        </NavigationView>-->
        
        <!--<d:NavigationView x:Name="nvSample" PaneDisplayMode="Top"
                             SelectionFollowsFocus="Enabled"
                             IsSettingsVisible="False"
                             IsBackButtonVisible="Collapsed"
                             HorizontalAlignment="Stretch"
                             Grid.Row="0">
            <d:NavigationView.MenuItems>
                <Button x:Name="BackButton" Click="BackButton_Click"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        IsEnabled="{x:Bind Frame.CanGoBack, Mode=OneWay}"
                        ToolTipService.ToolTip="Back" Height="41"/>
                <d:NavigationViewItem Content="Partida" x:Name="Game" HorizontalAlignment="Center"/>
                <muxc:NavigationViewItem Content="Tienda" x:Name="Store"/>
                <muxc:NavigationViewItem Content="Pase de Batalla" x:Name="BattlePass"/>
                <muxc:NavigationViewItem Content="Opciones" x:Name="Options"/>
            </d:NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </d:NavigationView>-->

        <Grid Grid.Row="1" muxc:Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <NavigationView x:Name="shopNavigation"
                            PaneDisplayMode="Top"
                            IsBackEnabled="False"
                            IsBackButtonVisible="Collapsed"
                            IsSettingsVisible="False" muxc:Grid.ColumnSpan="4">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Constetics" x:Name="CosmeticsTab" />
                    <NavigationViewItem Content="DLC" x:Name="DLCTab"/>
                </NavigationView.MenuItems>
            </NavigationView>

            <TextBlock Grid.Row="1"
                       Text="Nuevo"
                       FontSize="50" muxc:Grid.ColumnSpan="4"/>
            <TextBlock Grid.Row="2"
                       Text="Trajes de soldados"
                       FontSize="50" muxc:Grid.ColumnSpan="4"/>
            <TextBlock Grid.Row="3"
                       Text="Banderas"
                       FontSize="50" muxc:Grid.ColumnSpan="4"/>
            <ListView x:Name="ImageGridView" 
                  Grid.Row="1" 
                  ItemsSource= "{x:Bind ListaDrones}"
                  ItemTemplate="{StaticResource ImageGridView_DefaultItemTemplate}" muxc:Grid.ColumnSpan="4"/>
            <!--<ListView x:Name="ImageGridView" 
                  CanDragItems="True"
                  DragItemsStarting="ImageGridView_DragItemsStarting"
                  Grid.Row="1" 
                  ItemsSource= "{x:Bind ListaDrones}"
                  ItemTemplate="{StaticResource ImageGridView_DefaultItemTemplate}"/>-->
        </Grid>
    </Grid>
</Page>
