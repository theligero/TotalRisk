                <muxc:NavigationViewItem Content="Opciones" x:Name="Options"/>
            </d:NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </d:NavigationView>-->

        <Grid Grid.Row="1" muxc:Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <NavigationView x:Name="shopNavigation"
                            PaneDisplayMode="Top"
                            IsBackEnabled="False"
                            IsBackButtonVisible="Collapsed"
                            IsSettingsVisible="False" muxc:Grid.ColumnSpan="4">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Constetics" x:Name="CosmeticsTab" />
                    <NavigationViewItem Content="DLC" x:Name="DLCTab"/>
                </NavigationView.MenuItems>
            </NavigationView>
            <TextBlock Grid.Row="2"
                       Text="Buques de guerra"
                       FontSize="50" muxc:Grid.ColumnSpan="4"/>
            <TextBlock Grid.Row="3"
                       Text="Banderas"
                       FontSize="50" muxc:Grid.ColumnSpan="4"/>
            <TextBlock Grid.Row="1"
                       Text="Otros"
                       FontSize="50"/>

            <GridView ItemsSource="{x:Bind ViewModel.Items}"
                      Grid.Row="1"
                      VerticalAlignment="Center"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollMode="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollMode="Disabled">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="ImageOverlayDataTemplate" x:DataType="local:CosmeticItems">
                        <Grid Height="180" Width="320" AutomationProperties.Name="{x:Bind ItemName}">
                            <Image Source="Placeholder.png" Stretch="UniformToFill"/>
                            <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Bottom" Background="{ThemeResource SystemBaseLowColor}" Padding="12">
                                <TextBlock Text="{x:Bind ItemName}"/>
                                <TextBlock Text="{x:Bind Price}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <GridView ItemsSource="{x:Bind ViewModel.Items}"
                      Grid.Row="2"
                      VerticalAlignment="Center"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollMode="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollMode="Disabled">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="ImageOverlayDataTemplate2" x:DataType="local:CosmeticItems">
                        <Grid Height="180" Width="320" AutomationProperties.Name="{x:Bind ItemName}">
                            <Image Source="Placeholder.png" Stretch="UniformToFill"/>
                            <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Bottom" Background="{ThemeResource SystemBaseLowColor}" Padding="12">
                                <TextBlock Text="{x:Bind ItemName}"/>
                                <TextBlock Text="{x:Bind Price}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <GridView ItemsSource="{x:Bind ViewModel.Items}"
                      Grid.Row="3"
                      VerticalAlignment="Center"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollMode="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollMode="Disabled">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="ImageOverlayDataTemplate3" x:DataType="local:CosmeticItems">
                        <Grid Height="180" Width="320" AutomationProperties.Name="{x:Bind ItemName}">
                            <Image Source="Placeholder.png" Stretch="UniformToFill"/>
                            <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Bottom" Background="{ThemeResource SystemBaseLowColor}" Padding="12">
                                <TextBlock Text="{x:Bind ItemName}"/>
                                <TextBlock Text="{x:Bind Price}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>
