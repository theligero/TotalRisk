<Page x:ConnectionId='1'
    x:Class="TotalRisk.PartidaOnline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TotalRisk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Windows.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2'                       >
        <muxc:NavigationView x:ConnectionId='3' x:Name="nvSample" PaneDisplayMode="Top"
                             SelectionFollowsFocus="Enabled"
                             IsSettingsVisible="False"
                             IsBackButtonVisible="Collapsed"
                             HorizontalAlignment="Stretch">
            <muxc:NavigationView.MenuItems>
                <Button x:ConnectionId='4' x:Name="BackButton"                         
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                                                                         
                        ToolTipService.ToolTip="Back"/>
                <muxc:NavigationViewItem x:ConnectionId='5' Content="Partida" x:Name="Game" HorizontalAlignment="Center"/>
                <muxc:NavigationViewItem x:ConnectionId='6' Content="Tienda" x:Name="Store"/>
                <muxc:NavigationViewItem x:ConnectionId='7' Content="Pase de Batalla" x:Name="BattlePass"/>
                <muxc:NavigationViewItem x:ConnectionId='8' Content="Opciones" x:Name="Options"/>
            </muxc:NavigationView.MenuItems>
            <Frame x:ConnectionId='9' x:Name="contentFrame"/>
        </muxc:NavigationView>

        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.25*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Tu partida reciente"
                       FontSize="70"
                       VerticalAlignment="Center"/>

            <Image Grid.Row="1" 
                   Grid.RowSpan="2"
                   Source="Assets/Square150x150Logo.scale-200.png"/>
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        >
                <TextBlock Text="TotalRisk VS"
                       FontSize="40"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <ComboBox HorizontalAlignment="Stretch"
                          Margin="30, 20, 30, 0">
                    
                </ComboBox>
                <Grid>
                    
                </Grid>
                <Button Width="350"
                        Height="200"
                        Padding="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center" 
                        Content="PLAY"
                        Margin="20"/>
            </StackPanel>
            
            <StackPanel Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                <TextBlock Text="TotalRisk Coop"
                       FontSize="40"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <Button Width="350"
                        Height="50"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center" 
                        Content="NUEVA PARTIDA"
                        Margin="20, 20, 20, 0"/>
                <ComboBox HorizontalAlignment="Stretch"
                          Margin="30, 20, 30, 0">

                </ComboBox>
                <Grid>

                </Grid>
                <Button Width="350"
                        Height="180"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center" 
                        Content="PLAY"
                        Margin="20"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

